---
import { Image } from 'astro:assets';
import imageOpen from '../assets/open.svg';
import imageClose from '../assets/close.svg';
import { menuItems } from '@assets/constants.astro';
const menuItem = 'test';
---

<div
  x-data="{ modalOpen: false }"
  @keydown.escape.window="modalOpen = false"
  class="relative z-50 w-auto h-auto">
  <!-- <button
    @click="modalOpen=true"
    class="inline-flex items-center justify-center h-10 px-4 py-2 text-sm font-medium transition-colors bg-white border rounded-md hover:bg-neutral-100 active:bg-white focus:bg-white focus:outline-none focus:ring-2 focus:ring-neutral-200/60 focus:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none"
    >Open
  </button> -->
  <button @click="modalOpen=true">
    <Image
      src={imageOpen}
      class="Header-button-image"
      alt={'ナビゲーションを開く'}
      width="24"
      height="18"
    />
  </button>
  <template x-teleport="body">
    <div
      x-show="modalOpen"
      class="fixed top-0 left-0 z-[99] flex items-center justify-center w-screen h-screen"
      x-cloak>
      <div
        x-show="modalOpen"
        x-transition:enter="ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="ease-in duration-300"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        @click="modalOpen=false"
        class="absolute inset-0 w-full h-full bg-black bg-opacity-40">
      </div>
      <div
        x-show="modalOpen"
        x-trap.inert.noscroll="modalOpen"
        x-transition:enter="ease-out duration-300"
        x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
        x-transition:leave="ease-in duration-200"
        x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
        x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        class="absolute top-0 right-0 w-40% h-full py-6 bg-white px-7 sm:max-w-lg sm:rounded-lg">
        <div class="flex items-center space-betweeen pb-2">
          <h3 class="text-lg font-semibold">Menu</h3>
          <button
            @click="modalOpen=false"
            class="absolute top-0 right-0 flex items-center justify-center w-8 h-8 mt-5 mr-5 text-gray-600 rounded-full hover:text-gray-800 hover:bg-gray-50">
            <svg
              class="w-5 h-5"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12"></path></svg
            >
          </button>
        </div>
        <div class="relative w-24">
          <ul class="Nav-list">
            <li class="Nav-item">
              <a href="#about">About</a>
            </li>
            <li class="Nav-item">
              <a href="#profile">Profile</a>
            </li>
            <li class="Nav-item">
              <a href="#work">Work</a>
            </li>
            <li class="Nav-item">
              <a href="#tech">Tech</a>
            </li>
            <li class="Nav-item">
              <a href="#faq">FAQ</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </template>
</div>

<style>
  .Nav-list {
    position: fixed;
    top: 20;
    right: 40px;
  }

  .Nav-item {
    color: #222020;
    padding: 10px;
  }
</style>
